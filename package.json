{
  "name": "ape-archive",
  "version": "1.0.50",
  "description": "Ape Archive - Disaster Relief Education Platform with Google Drive Integration",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun run generate && bun run --watch src/index.ts",
    "generate": "dotenv -e .env -- prisma generate",
    "seed": "bun prisma db seed",
    "sync:drive": "dotenv -e .env -- bun src/scripts/sync-drive.ts",
    "migrate:drive": "dotenv -e .env -- bun src/scripts/migrate-drive.ts",
    "start": "bun src/index.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "6.0.0",
    "elysia": "latest",
    "googleapis": "^167.0.0",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/pg": "^8.15.6",
    "dotenv-cli": "^11.0.0",
    "prisma": "6.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "prisma": {
    "seed": "bun prisma/seed.ts"
  },
  "module": "src/index.js",
  "type": "module",
  "private": true
}